<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/imageViewTraiTim"
        android:layout_width="415dp"
        android:layout_height="567dp"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/tim5"
        />

    <TextView
        android:id="@+id/textViewSoNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="248dp"
        android:fontFamily="cursive"
        android:text="TextView"
        android:textColor="#FFFDFD"
        android:textSize="60dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageViewTraiTim"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageViewTraiTim"
        app:layout_constraintTop_toTopOf="@+id/imageViewTraiTim" />

    <Button
        android:id="@+id/buttonChonNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
